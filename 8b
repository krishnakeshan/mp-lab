DISP MACRO M
LEA DX,M
MOV AH,09H
INT 21H
ENDM

WAIT1 MACRO
MOV AH,01
INT 21H
ENDM


.MODEL SMALL
.DATA
M1 DB 'SET X VALUE AND ENTER $'
M2 DB 'SET Y VALUE AND ENTER $'
M3 DB 'LOWER BYTE FROM PORT A AND ENTER FOR HIGHER BYTES$'
M4 DB 'HIGER BYTE FROM PORT A $'
PORTA EQU 0E880H
PORTB EQU 0E881H
CTRL EQU 0E883H

.CODE
 MOV AX,@DATA
 MOV DS,AX
 MOV DX,CTRL
 MOV AL,82H
 OUT DX,AL
 DISP M1
 WAIT1
 MOV DX,PORTB
 IN AL,DX
 MOV BL,AL
 DISP M2
 WAIT1
 MOV DX,PORTB
 IN AL,DX
 MOV AH,00
 MUL BL
 PUSH AX
 DISP M3
 POP AX
 MOV DX,PORTA

 OUT DX,AL
 MOV BL,AH
 WAIT1
 DISP M4
 MOV DX,PORTA
 MOV AL,BL
 OUT DX,AL
 MOV AH,4CH
 INT 21H
 END

